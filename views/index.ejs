<!-- header include -->
<%- include('include/_header') %>
<!-- / header include  -->
    <!-- main section -->
    <main id="site-main">
        <div class="container">
            <div class="box-nave d-flex justify-between">
                <a href="/add-user" class="border-shadow">
                    <span class="text-gradient">New User <i class="fas fa-user"></i></span>
                </a>
            </div>

            <!-- form  -->
            <form action="/" method="POST">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Gender</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%- include('include/_show') %>

                    </tbody>
                </table>
            </form>
            
        </div>
    </main>
    <!--/main section -->

<!-- footer include -->
<%- include('include/_footer') %>
<!-- / footer include  -->